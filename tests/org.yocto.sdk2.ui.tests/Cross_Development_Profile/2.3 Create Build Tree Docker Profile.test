------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

if [$build_tree_path | not-eq "" ] {
	get-preferences-menu | click
	with [get-window Preferences] {
	    get-tree | select "Yocto Project \\(alpha\\)" | click
	    get-group "Cross development profile" | get-button "New..." | click
	    with [get-window "Create new profile"] {
	        get-editbox -after [get-label "Enter new profile name"] | set-text $docker_build_tree_toolchain_profile_name
	        get-button OK | click
	    }
	    get-button "Build and launch using container" | check
	    with [get-group Toolchain] {
	        get-button "Build directory:" | click
	        get-button "Edit..." -index 1 | click
	    }
	    with [get-window -class ContainerDirectoryDialog] {
	        get-group "Mount type:" | get-button "Mount a host directory" | click
	        get-editbox -after [get-label "Container path:"] | set-text $build_tree_path
	        get-group "Mount type:" | get-editbox -after [get-label "Directory:"] | set-text $build_tree_path
	        get-button OK | click
	    }
	    get-button Apply | click
	    get-button "Apply and Close" | click
	}
}-else{
	echo "Test case \"Create Build Tree Docker Profile\" skipped. Parameter build_tree_path not set."
}
------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac--
